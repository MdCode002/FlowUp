{% extends 'base.html.twig' %}

{% block title %}FlowLab
{% endblock %}
{% block content %}
	<link href="{{asset('assets/css/flowlab.css')}}" rel="stylesheet">
	<div class="tShirtContainerFront allTshirt">
		<img src="{{asset('assets/img/flowlab/T-shirt-White-Front.png')}}" alt="" class="tShirtFront tShirt img-fluid">
		<div class="canvasContainerF">
			<canvas id="canvasFront"></canvas>
		</div>
	</div>


	<div class="tShirtContainerBack allTshirt">
		<img src="{{asset('assets/img/flowlab/T-shirt-white-Back.png')}}" alt="" class="tShirtBack tShirt img-fluid">
		<div class="canvasContainerB">
			<canvas id="canvasBack"></canvas>
		</div>
	</div>
	<div id="SelectBackFront">
		<img src="{{asset('assets/img/flowlab/contour-du-bouton-circulaire-fleche-droite - Copie.png')}}" width="30px" id="btnLeft" style="cursor: pointer;" alt="">
		<img src="{{asset('assets/img/flowlab/contour-du-bouton-circulaire-fleche-droite.png')}}" width="30px" id="btnRight" style="cursor: pointer;" alt="">
	</div>
	<!-- <div class="canvasContainerF"><canvas id="canvasFront"></canvas></div> -->
	<!-- <div class="canvasContainerB"><canvas id="canvasBack"></canvas></div> -->
	<div class="customPanel">
		<input type="file" id="imageInput" style="display: none;">
		<div class="PanelOption" id="imageOption">
			<img src="{{asset('assets/img/flowlab/images.png')}}" alt="">
			<p>Image</p>
		</div>
		<div class="PanelOption" id="textOption">
			<img src="{{asset('assets/img/flowlab/police-de-caractere.png')}}" alt="">
			<p>Text</p>
		</div>
		<div id="toggleDiv">
			<div id="Text">

				<div>
					<label for="fontSelector">
						<h6>
							Police</h6>
					</label>
					<select id="fontSelector" width="100px">
						<option value="Arial, sans-serif">Arial</option>
						<option value="Georgia, serif">Georgia</option>
						<option value="Times New Roman, serif">Times New Roman</option>
						<option value="Courier New, monospace">Courier New</option>
						<option value="Comic Sans MS, cursive">Comic Sans MS</option>
						<option value="Verdana, sans-serif">Verdana</option>
						<option value="Brush Script MT, cursive">Brush Script MT</option>
						<option value="Papyrus, fantasy">Papyrus</option>
						<option value="Borel, cursive">Borel</option>
					</select>
				</div>
				<div>

					<h6>Couleur</h6>

					<input type="color" id="colorselector">
				</div>
				<center>
					<div id="addText" class="btn  btn-warning">
						Ajouter text
					</div>
				</center>
			</div>
			<div id="couleur">
				<p>Couleur t-shirt</p>
				<div id="CWhite"></div>
				<div id="Cblack"></div>
				<div id="CGrey"></div>
			</div>
		</div>
		<div class="PanelOption" id="ProduitOption">
			<img src="{{asset('assets/img/flowlab/produit.png')}}" alt="">
			<p>Produit</p>
		</div>
	</div>
	{# <div id="valider">
				<button id="downloadButton">Capturer</button>
			</div> #}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.4/jspdf.min.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/4.3.1/fabric.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

	<script src="{{asset('assets/js/flowlab.js')}}"></script>

{% endblock %}
{% block nofooter %}{% endblock %}
